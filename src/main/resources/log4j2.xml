<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">

    <Properties>
        <Property name="log4j.skipJansi">false</Property>
        <Property name="LOG_PATTERN">
            %style{%d{HH:mm:ss}}{dim}
            %highlight{%-5level}{
            FATAL=bg_red,
            ERROR=red,
            WARN=yellow,
            INFO=green,
            DEBUG=blue,
            TRACE=cyan
            }
            %style{%c}{magenta}
            - %msg%n
        </Property>
    </Properties>

    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%style{%d{HH:mm:ss}}{cyan} %highlight{%-5level} %logger - %msg%n"/>
        </Console>
    </Appenders>

    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>